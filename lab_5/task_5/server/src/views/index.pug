doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title Wypożyczalnia rowerów i hulajnóg
        link(rel="icon" type="image/x-icon" href="logo.png")
        style(type='text/css').
            main {
                display: flex;
                flex-direction: column ;
                align-items: center;
            } 
            fieldset {
                display: flex;
                flex-direction: column;
                align-items: center;
                width: 200px;
            }
            div {
                display: flex;
                flex-direction: row;
                justify-content: space-evenly;
            }
            .adminlogin {
                justify-content: center;
            }
    body
        main
            h1 Wypożyczalnia pojazdów
            fieldset  
                div
                    fieldset
                        form(method='GET' action='/sign-in')
                            label(for='firstname') Imię:
                            br
                            input(name='firstname', required)
                            label(for='lastname') Nazwisko:
                            br
                            input(name='lastname', required)
                            br
                            br
                            input(type='submit', value="Zarejestruj/zaloguj jako user") 
                    fieldset.adminlogin
                        form(method='GET' action='/admin')
                            input(type='submit', value="Zaloguj jako admin") 
